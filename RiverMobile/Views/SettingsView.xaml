<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="RiverMobile.Views.SettingsView"
    Title="{Binding Title, StringFormat='River {0}'}"
    Icon="Menu.png">
    <ContentPage.Content>
        <StackLayout>
            <Label
                Text="{Binding UserName, StringFormat='User: {0}'}" />
            <Button 
                Command="{Binding LogoutCommand}"
                Text="Logout" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>